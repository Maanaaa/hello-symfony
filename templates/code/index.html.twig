{% extends 'base.html.twig' %}

{% block title %}Code list{% endblock %}

{% block body %}
    <h1>Code list</h1>
    <ul>
        {% for code in codes %}
            <li>
                {{ code.id }} - {{ code.title }}
                <br>
                <h2>Content : </h2>
                {{ code.content }}
            </li>
        {% else %}
            <li>No code found</li>
        {% endfor %}
    </ul>
{% endblock %}